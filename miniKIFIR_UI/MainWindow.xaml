<Window x:Class="miniKIFIR_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:miniKIFIR_UI"
        mc:Ignorable="d"
        Title="miniKIFIR" Height="550" Width="900"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#181735"
        FontWeight="Medium">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Background="#0F0F2D"
      Grid.ColumnSpan="2"
              MouseDown="Grid_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="miniKIFIR"
                       Margin="5 0 0 0"
                       FontSize="14"
                       Foreground="White"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontFamily="Fonts/#Dosis"
                       FontWeight="Medium"/>

            <Button x:Name="btnAppExit" Content="X" FontSize="16" Grid.Column="13" 
                   BorderThickness="0" Click="btnAppExit_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Foreground" Value="Gray"/>
                        <Setter Property="Background" Value="#0F0F2D"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="TextElement.FontFamily" Value="Fonts/#Dosis"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#38395D"/>
                                <Setter Property="Foreground" Value="#ff2800"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="55" Height="23"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                              HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label Content="OM azonosító" FontSize="18" Margin="10 10 660 0" Foreground="White" 
                   FontFamily="Fonts/#Dosis"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Label Content="Név" FontSize="18" Margin="10 10 740 0" Foreground="White" 
                   FontFamily="Fonts/#Dosis"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <Label Content="Email" FontSize="18" Margin="10 10 730 0" Foreground="White" 
                   FontFamily="Fonts/#Dosis"/>
        </StackPanel>
        <StackPanel Grid.Row="4" Orientation="Horizontal">
            <Label Content="Születési Dátum" FontSize="18" Margin="10 10 645 0" Foreground="White" 
                   FontFamily="Fonts/#Dosis"/>
        </StackPanel>
        <StackPanel Grid.Row="5" Orientation="Horizontal">
            <Label Content="Értesítési Cím" FontSize="18" Margin="10 10 665 0" Foreground="White" 
                   FontFamily="Fonts/#Dosis"/>
        </StackPanel>
        <StackPanel Grid.Row="6" Orientation="Horizontal">
            <Label Content="Matek Eredmény" FontSize="18" Margin="10 10 635 0" Foreground="White" 
                   FontFamily="Fonts/#Dosis"/>
        </StackPanel>
        <StackPanel Grid.Row="7" Orientation="Horizontal">
            <Label Content="Magyar Eredmény" FontSize="18" Margin="10 10 635 0" Foreground="White" 
                   FontFamily="Fonts/#Dosis"/>
        </StackPanel>
        <StackPanel Grid.Row="8" Orientation="Vertical">
            <Button x:Name="btnRogzit" Content="Rögzít" Margin="0 10 0 10" FontSize="22" 
                     BorderThickness="0" Foreground="White">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#FE6584"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="TextElement.FontFamily" Value="Fonts/#Dosis"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D94C6B"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="120" Height="45"
                                CornerRadius="20"
                                Background="{TemplateBinding Background}">

                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>

    
</Window>
